{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des commentaires</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th class="text-center">Commentaire</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Annonce</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td>{{ comment.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <img src="{{ comment.author.picture }}" class="avatar avatar-micro mr-2" alt="Avatar de {{ comment.author.fullName }}">
                            {{ comment.author.fullName }}
                        </td>
                        <td class="text-left">
                            {{ comment.content }}
                        </td>
                        <td class="text-center">
                            <span class="badge badge-dark rounded">{{ comment.Rating | number_format(0,',',' ') }}</span>
                        </td>
                        <td class="text-left">
                            {{ comment.ad.title }}
                        </td>
                        <td>
                            <a href="{{ path('admin_comments_edit', { 'id': comment.id }) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                            <a href="{{ path('admin_comments_delete', { 'id': comment.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}